<?xml version="1.0" encoding="UTF-8"?>

<Context>
	<!-- Weld (CDI) -->
	<Manager pathname="" />

	<Resource name="BeanManager" auth="Container" type="javax.enterprise.inject.spi.BeanManager"
		factory="org.jboss.weld.resources.ManagerObjectFactory" />

	<!-- DataSource -->
	<Resource name="jdbc/cidDB" auth="Container" factory="org.apache.naming.factory.BeanFactory"
		type="com.mchange.v2.c3p0.ComboPooledDataSource" driverClass="com.mysql.jdbc.Driver"
		jdbcUrl="jdbc:mysql://127.0.0.1:3306/cid" user="root" password="tapout"
		minPoolSize="3" maxPoolSize="3" />
	
	<!-- JAAS (Java Authentication and Authorization Service) -->
	<Realm className="org.apache.catalina.realm.JDBCRealm" driverName="com.mysql.jdbc.Driver"
		connectionURL="jdbc:mysql://127.0.0.1:3306/cid"
		connectionName="root" connectionPassword="tapout"
		userTable="usuario" userNameCol="email" userCredCol="senha"
		userRoleTable="permissao_usuario" roleNameCol="permissao" digest="SHA-256" />
</Context>
