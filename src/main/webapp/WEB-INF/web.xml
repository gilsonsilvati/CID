<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<!-- Nome da Aplicação -->
	<display-name>cid</display-name>

	<!-- Configurando Página Inicial 
	<welcome-file-list>
		<welcome-file>paginas/Home.xhtml</welcome-file>
	</welcome-file-list>
	-->

	<!-- Configurando a Servlet -->
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>

	<!-- Ambiente de Desenvolvimento -->
	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>

	<context-param>
		<param-name>javax.faces.FACELETS_REFRESH_PERIOD</param-name>
		<param-value>0</param-value>
	</context-param>

	<!-- Data e Horário Local da Máquina -->
	<context-param>
		<param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
		<param-value>true</param-value>
	</context-param>
	
	<!-- Validando campos vazios -->
	<context-param>
		<param-name>javax.faces.VALIDATE_EMPTY_FIELDS</param-name>
		<param-value>true</param-value>
	</context-param>

	<context-param>
		<param-name>primefaces.FONT_AWESOME</param-name>
		<param-value>true</param-value>
	</context-param>

	<context-param>
		<param-name>facelets.SKIP_COMMENTS</param-name>
		<param-value>true</param-value>
	</context-param>

	<!-- Página de Erro...
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/paginas/Erro.xhtml</location>
	</error-page>
	-->
	
	<!-- Configurar Servidor com UTF-8 -->
	<filter>
		<filter-name>Encoding Filter</filter-name>
		<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>Encoding Filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- Configurando login JAAS -->
	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/Login.xhtml</form-login-page>
			<form-error-page>/Login.xhtml</form-error-page>
		</form-login-config>
	</login-config>
	
	<!-- Tipos de permissões -->
	<security-role>
		<role-name>cadastro</role-name>
	</security-role>
	<security-role>
		<role-name>consulta</role-name>
	</security-role>
	
	<!-- Configurando páginas de acesso -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Home</web-resource-name>
			<url-pattern>/paginas/Home.xhtml</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>cadastro</role-name>
			<role-name>consulta</role-name>
		</auth-constraint>
	</security-constraint>
	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Cadastro usuario</web-resource-name>
			<url-pattern>/paginas/cadastrar/CadastraUsuario.xhtml</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>cadastro</role-name>
		</auth-constraint>
	</security-constraint>
	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Consulta usuario</web-resource-name>
			<url-pattern>/paginas/consultar/ConsultaUsuario.xhtml</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>consulta</role-name>
		</auth-constraint>
	</security-constraint>
	
	<!-- Páginas de erro -->
	<error-page>
		<error-code>403</error-code>
		<location>/paginas/403.xhtml</location>
	</error-page>

</web-app>
